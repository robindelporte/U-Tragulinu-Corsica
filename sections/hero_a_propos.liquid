        },
        {
            "id": "image_image",
            "type": "image_picker",
            "label": "Image"
        }
    ],
    "presets": [
        {
            "name": "Hero - A propos",
            "category": "Liquify",
            "blocks": []
        }
    ]
} {% endschema %}