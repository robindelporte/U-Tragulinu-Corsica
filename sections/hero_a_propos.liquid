<div class="padding-global">
          <div class="container-large">
            <div class="padding-section-4rem">
              <div class="header_component">
                <div class="margin-bottom margin-medium">
                  <div class="header_content-wrapper">
                    <div class="header_heading">
                      <h1 class="heading-style-h1">
{{ section.settings.text_titre }}
</h1>
                    </div>
                    <div class="header_content">
                      <p class="text-weight-medium">
{{ section.settings.text_paragraphe }}
</p>
                    </div>
                  </div>
                </div>
                <div class="header_image-wrapper">{% if section.settings.image_image %}
{{ section.settings.image_image | image_url: width: 1000 | image_tag: loading: 'eager', class: 'header_image' }}
{% else %}
<img loading="eager" alt="" src="{{ 'Placeholder-Image---Landscape.svg' | asset_url }}" class="header_image">
{% endif %}</div>
              </div>
            </div>
          </div>
